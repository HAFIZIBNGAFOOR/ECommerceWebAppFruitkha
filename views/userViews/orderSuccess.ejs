            </div>
        </div>
        
    
        <div class="container main">
    
    
            <div class="profile">
                <div class="container">
                    <a type="button"  href="/shop" class="btn btn-outline-info btn-icon-text">
                        <i class="fas fa-arrow-left"></i> Go Back To Shop </a>
    <section class="order_details section_gap">
           
        <div class="container">
        
            <h3 class="title_confirmation">Thank you. Your order has been received.</h3>
            <div class="row order_d_inner align-items-center">
                    <div class="col-lg-12">
                    <div class="details_item">
                    <h4>Order Info</h4>
                    <ul class="list">
                    <li><a ><span>Order id</span> : <%= latestOrder.orderId %></a></li>
                    <li><a ><span>Date</span> : <%= latestOrder.date.toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric'}) %> <%= latestOrder.date.toLocaleTimeString('en-US', {hour: 'numeric', minute:'numeric'}) %></a></li>
                    <li><a ><span>Total</span> : <%= latestOrder.total ? latestOrder.total : latestOrder.subtotal %></a></li>
                    <li><a ><span>Address</span> : <%= latestOrder.addressId %></a></li>                   
                    <li><a ><span>Payment method</span> : <%= latestOrder.payment_method %> </a></li>
                    
                    </ul>
                    </div>
                    </div>

                </div>
                <div class="order_details_table">
                    <h2>Order Details</h2>
                    <div class="table-responsive">
                        
                        <table class="table">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col"> <h3>Product</h3></th>
                                        <th scope="col"><h3>Quantity</h3></th>
                                        <th scope="col"><h3>Total</h3></th>
                                    </tr>
                                </thead>
                                <tbody>
    

                                        <% var totalPrice = 0 %>  
                                    <% latestOrder.product.forEach(function(productItem) { %>
                                    <tr>
                                        <td>
                                            <p><%= productItem.name %></p>
                                        </td>
                                        <td>
                                            <h5><%= productItem.quantity %></h5>
                                        </td>
                                        <td>
                                            <p><%= productItem.price * productItem.quantity %></p>
                                        </td>
                                    </tr>
                                    <% totalPrice += productItem.price * productItem.quantity %>
                                  <% }) %>
                                  <tr>
                                        <td>
                                            <h4>Subtotal: </h4>
                                        </td>
                                        <td></td>
                                        <td><p><%= totalPrice %></p></td>
                                      </tr>
                                    <tr>
                                        <td>
                                            <h4>Discount total : </h4>
                                        </td>
                                        <td>
                                            <h5></h5>
                                        </td>
                                        <td>
                                            <p><%= latestOrder.total ? latestOrder.total : latestOrder.subtotal %></p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4>Shipping</h4>
                                        </td>
                                        <td>
                                            <h5></h5>
                                        </td>
                                        <td>
                                            <p>Free</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4>Total</h4>
                                        </td>
                                        <td>
                                            <p><%= latestOrder.total ? latestOrder.total : latestOrder.subtotal %></p>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                                   
                    </div>
                </div>
            </div>
       
        </section>
