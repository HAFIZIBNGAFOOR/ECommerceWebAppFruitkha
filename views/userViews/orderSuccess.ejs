    .profile h2 {
      font-size: 36px;
      margin-bottom: 10px;
    }
    
    .profile p {
      font-size: 24px;
      margin-bottom: 20px;
    }
    
    .profile ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    
    .profile li {
      font-size: 18px;
      margin-bottom: 10px;
    }
    
    .profile li strong {
      display: inline-block;
      width: 100px;
      font-weight: bold;
      margin-right: 10px;
    }
    </style>
    <body>
