	<!-- products -->
	<div class="product-section mt-150 mb-150">
		<div class="container">

			<div class="row">
                <div class="col-md-12">
                    <div class="product-filters">
                        <ul>
                            <li class="active" data-filter="*">All</li>
                            <li data-filter=".strawberry">Category</li>
                        </ul>
                    </div>
                </div>
            </div>
			<div class="row product-lists">
				<% if (Product.length>0) { %>
					<% for( let i = 0; i < Product.length; i++ ) { %>
						<% if (Product.length<2) { %>
							<div class="col-lg-6 col-md-4 text-center ">					
						
								<div class="single-product-item ">
								 
								 <div class="product-image" >
									 <a href="/singleProduct?id=<%= Product[i]._id %>">
										<img class="img-fit" src="/images/<%= Product[i].ProductImage[2] %>" alt="">
									</a>
								 </div>
								 <h3><%= Product[i].ProductName %></h3>
								 <p class="product-price"><span>Per Kg</span> <%= Product[i].Price %>INR </p>
								 <a href="cart.html" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>

							 </div>
						 </div>
							<% } else{%>
				<div class="col-lg-3 col-md-6 text-center ">					
						
					   <div class="single-product-item ">
						
						<div class="product-image">
							<a href="/singleProduct?id=<%= Product[i]._id %>"><img class="img-fluid" src="/images/<%= Product[i].ProductImage[0] %>" alt=""></a>
						</div>
						<h3><%= Product[i].ProductName %></h3>
						<p class="product-price"><span>Per Kg</span> <%= Product[i].Price %>INR </p>
						<a href="cart.html" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
					</div>
				</div>
				<% } %>
				<% } %>
				<% } else {%>
					<div>No Products Found</div>
					<% } %>
			</div>
</div>
			
