	<div class="cart-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Product Image</th>
									<th class="product-name">Name</th>
									<th class="product-price">Price</th>
									<th class="product-quantity">Quantity</th>
									<th class="product-total">Total</th>
								</tr>
							</thead>
							<tbody id="tablebody" data-cartitems="<%= JSON.stringify(cartItems) %>">
								<% for( let i = 0; i < cartItems.length; i++ ) { %>
								<tr class="table-body-row">
									<td class="product-remove" onclick="deleteCart('<%= user %>' ,' <%=cartItems[i]._id %>' , '<%=cartItems[i].ProductId._id%>')" id="deleteItem" ><i  class="far fa-window-close"></i></td>
									<td class="product-image"><img src="/images/<%= cartItems[i].ProductId.ProductImage[0] %>" alt=""></td>
									<td class="product-name"><%= cartItems[i].ProductId.ProductName %></td>
									<td class="product-price"><%= cartItems[i].ProductId.Price %></td>
									<td class="product-quantity" ><input id="quantityInput<%= i %>" type="number" placeholder="<%= cartItems[i].Quantity %>" min="1" max="<%= cartItems[i].ProductId.Quantity %>" ></td>
									<td class="product-total" id="total<%= i %>"><%= cartItems[i].Total%></td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="total-section">
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th>Total</th>
									<th>Price</th>
								</tr>
							</thead>
							<tbody>
								<tr class="total-data">
									<td><strong>Subtotal: </strong></td>
									<td id="cartTotal">Rs.<%= Total %></td>
								</tr>
								<tr class="total-data">
									<td><strong>Shipping: </strong></td>
									<td>Free Shipping</td>
								</tr>
								<tr class="total-data">
									<td><strong>Total: </strong></td>
									<td id="getFull">Rs.<%= Total %></td>
								</tr>
							</tbody>
						</table>
						<div class="cart-buttons">
							<a href="/updateCart" class="boxed-btn">Update Cart</a>
							<a href="/checkout" class="boxed-btn black">Check Out</a>
						</div>
