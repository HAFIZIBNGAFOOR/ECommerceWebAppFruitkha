<%- include('../layouts/adminHeader.ejs') %>

</style>
<div class="container">
  <div class="row justify-content-between mr-3">
    <div class="col-lg-3 md-5 mb-4 d-flex   ">
      <div><label for="fromDate"> Start Date:</label></div>
      <div><input type="date" id="from-date" class="form-control"></div>
    </div>
    <div class="col-lg-3 md-5 mb-4 d-flex   ">
      <div><label for="fromDate"> End Date:</label></div>
      <div><input type="date" id="to-date" class="form-control"></div>
    </div>
    <div class="col-lg-6 md-5 grid-margin ml-auto" onclick="searchOrders()">
      <a type="button" class="btn btn-secondary btn-fw " >Search</a>
      </div>
  </div>
    <div class="row ">       
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Sales Report</h4>
                <p class="card-description">
                </p>
                <table class="table table-dark">
                  <thead>
                    <tr>
                      <th> # </th>
                      <th> Order Id </th>
                      <th> Total Amount </th>
                      <th> Date </th>
                      <th> Payment Method </th>
                      <th> Check </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (orders.length > 0) { %>   
                      <% for( let i = 0; i < orders.length; i++ ) { %>                                       
                    <tr>
                      <td> <%= i + 1 %></td>
                      <td> <%= orders[i].orderId %> </td>
                      <td> <%= orders[i].total %></td>
                      <td> <%= orders[i].date %></td>
                      <td> <%= orders[i].payment_method %></td>
                      <td> <a class="text-decoration-none " href="/admin/salesReport/view?id=<%= orders[i]._id %>">View</a></td>

                    </tr>
                    <% } %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
    </div>
</div>
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/3/css/bootstrap.css" />
<script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />
<script>
  function searchOrders(){
    const fromDate = document.getElementById("from-date").value
    const toDate = document.getElementById("to-date").value
    const allDate = fromDate+  '|' + toDate;
    window.location.href = '/admin/sales-report?Date=' + encodeURIComponent(allDate);
  }
  </script>
<%- include('../layouts/adminFooter.ejs') %>