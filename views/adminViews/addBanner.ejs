<%- include('../layouts/adminHeader.ejs') %>
     
        <div class="body column-lg-10 m-5 p-5 auth ">
          <a type="button"  href="/admin/banner" class="btn btn-outline-info btn-icon-text">
            <i class="fas fa-arrow-left"></i> Go Back To Banner </a>
          <div class="row flex-grow">
            <div class=" mx-auto">
              <div class="auth-form-light text-left p-5">
                <!-- <div class="brand-logo">
                  <img src="/assets/images/logo.svg">
                </div> -->
                <div>
                  <h4>Banner</h4> 
                  <h6 class="font-weight-light">Add new Banner</h6>
                </div>
                <%  
				if(typeof message !=='undefined'){
					%>
						<p style="color:green;"><%= message %></p>
				
					<%
				
				}
				
				%>
                <form class="form-outline mb-4" id="form"  enctype="multipart/form-data" action="/admin/addBanner" method="post">
               
                <form class="pt-3">
                  <p id="nameError" style="color: red;"></p>
                  <div class="form-group">
                    <input type="text" name="name" id="bannerName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Banner Name">
                  </div>
                  <div class="form-group">
                    <input type="text" name="caption" id="caption" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Caption">
                  </div>
                   <div class="form-group">
                    <input type="file" id="image"   name="file" accept="image/*" class="form-control form-control-lg" id="exampleInputImage1" placeholder="Banner Image" required>
                  </div>
                
                  <!-- <div class="form-group">
                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                  </div>
                  <div class="mb-4">
                    <div class="form-check">
                      <label class="form-check-label text-muted">
                        <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions </label>
                    </div>
                  </div> -->
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="">Add</button>
                  </div>
                  <!-- <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="login.html" class="text-primary">Login</a>
                  </div> -->
                </form>
              </div>
            </div>
          </div>
        </div>
    <script>
      const namePattern = /^[A-Za-z]{4,10}$/;
      const captionPattern = /^[A-Za-z]{8,30}$/;
      let name=document.getElementById('bannerName');
      let caption=document.getElementById('caption');
      let nameError=document.getElementById('nameError')
      let form =document.getElementById('form');
      const nameFunction =  () => {
        if (!namePattern.test(name.value)) {
          nameError.textContent = 'Invalid name '
          event.preventDefault();
          return false
        } else {
          nameError.textContent = ''
          return true
        }
      }
      const captionFunction = () => {
        if(!captionPattern.test(caption.value)){
            nameError.textContent ='invalid caption';
            event.preventDefault();
            return false;
        }else{
            nameError.textContent=''
            return true
        }
      }
     form.addEventListener('submit',nameFunction,captionFunction);
    </script>
